{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./server/types", "./node_modules/@types"]
  },
  "include": ["server/**/*", "server/shared", "server/types/flutterwave-node-v3.d.ts"],
  "exclude": ["node_modules"]
}
